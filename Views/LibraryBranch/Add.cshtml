@model LibraryManagement.Models.LibraryBranch

<form method="post" asp-controller="LibraryBranch" asp-action="add">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="BranchName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="BranchName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="BranchName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>

</form>